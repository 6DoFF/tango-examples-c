<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.projecttango.areadescriptionnative"
    android:versionCode="0"
    android:versionName="1.1" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/sys_name"
        android:theme="@style/AppTheme" >
        <uses-library 
            android:name="com.projecttango.libtango_device" 
            android:required="true" />
        <activity
            android:label="@string/menu_name"
            android:name="com.projecttango.areadescriptionnative.StartActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.projecttango.areadescriptionnative.AreaDescriptionActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name="com.projecttango.areadescriptionnative.ADFUUIDListViewActivity"
            android:screenOrientation="landscape">
        </activity>
    </application>

</manifest>
